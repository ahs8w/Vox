<% if user_signed_in? %>
<%= simple_form_for [@post, @post.comments.build] do |f| %>

<button class="btn btn-info btn-large" data-toggle="modal" data-target="#CommentModal">
  Respond
</button>

<div id="CommentModal" class="modal hide fade" tabindex="-1" role="dialog">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3>What are your thoughts?</h3>
  </div>
  <div class="modal-body">
    <%= f.input :title %>
    <%= f.input :category, collection: ["Additional Information", "Another Perspective", "Comment", "Image"] %>
    <%= f.input :image, as: :file %>
    <%= f.input :remote_image_url %>
    <%= f.input :location %>
    <%= f.input :content %>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
    <%= f.button :submit %>
  </div>

  <%= f.hidden_field :user_id, value: "#{current_user.id}" %>
</div>

<% end %>
<% end %>