<h2>Forgot your password?</h2>
<div class="row">
  <div class="span4">
  <%= simple_form_for(resource, :as => resource_name, :url => unlock_path(resource_name), :html => { :method => :post }, html: {class: "well"}) do |f| %>
    <%= devise_error_messages! %>
  
    <%= f.input :email, :autofocus => true %>
  
    <div><%= f.button :submit, "Send me password reset instructions" %></div>
  <% end %>
  
  <%= render "devise/shared/links" %>
  </div>
</div>